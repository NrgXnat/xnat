<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.nrg.xdat</groupId>
	<artifactId>xdat_core</artifactId>
	<packaging>jar</packaging>
	<version>1.1-SNAPSHOT</version>
	<name>xdat_core</name>
	<url>http://bitbucket.org/nrg/xdat_core/</url>
	<scm>
		<url>http://bitbucket.org/nrg/xdat_core</url>
	</scm>
	<organization>
		<name>Neuroinformatics Research Group</name>
		<url>http://nrg.wustl.edu</url>
	</organization>
	<build>
		<!-- 
			Force the jar's name to be compliant with xdat_release's expectation (xdat-1.jar).  
			Eventually this should be removed once xdat_release moves to maven 2 
		-->
		<finalName>xdat-1</finalName>

		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<!--
		Use the Sun hosted javamail
		http://maven.apache.org/guides/mini/guide-coping-with-sun-jars.html
	-->
	<repositories>
		<repository>
			<id>maven2-repository.dev.java.net</id>
			<name>Java.net Repository for Maven</name>
			<url>http://download.java.net/maven/2/</url>
			<layout>default</layout>
		</repository>
	</repositories>
