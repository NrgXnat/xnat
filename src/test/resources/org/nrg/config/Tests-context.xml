<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd">

    <import resource="classpath:/META-INF/configuration/nrg-config-context.xml" />

    <bean class="org.nrg.framework.test.OrmTestConfiguration"/>
    <bean class="org.nrg.prefs.configuration.NrgPrefsServiceConfiguration"/>

    <context:component-scan base-package="org.nrg.config.util"/>

    <util:list id="configFilesLocations" value-type="java.lang.String">
	    <value>src/test/resources/org/nrg/config</value>
	</util:list>

    <bean id="defaultResolver" class="org.nrg.config.resolvers.SimplePrefsEntityResolver"/>

</beans>
